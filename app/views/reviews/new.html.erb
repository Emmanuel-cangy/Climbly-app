<div class="container form-card">
  <h2 class="p-2">Leave a Review</h2>
  <div class="card-review">
  <h2>How would you rate this hike?</h2>
  <%= simple_form_for [@hike, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :difficulty %>
    <%= f.input :content, placeholder: 'Write a review' %>
    <%= f.input :photo, as: :file %>
    <div class="d-flex justify-content-between">
      <%= f.submit 'Post', class: "btn btn-default btn-success" %>
      <%=f.submit 'Skip', class: "btn btn-default btn-primary"%>
    </div>
  <% end %>
  </div>
</div>
