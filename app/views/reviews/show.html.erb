<div class="card">
   <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
     <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" <% @review.photos.each do |photo| %>
        <%= cl_image_tag(photo.key || "" ) %>
          <% end %> alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" <% @review.photos.each do |photo| %>
        <%= cl_image_tag(photo.key || "" ) %>
          <% end %> alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" <% @review.photos.each do |photo| %>
          <%= cl_image_tag(photo.key || "" ) %>
          <% end %>alt="Third slide">
      </div>
   </div>
    <div class="card-body">
      <h2><% @review.hike.name %></h2>
      <p>Rating:
      <% @review.rating.times do %>
        <i class="fa-solid fa-star"></i>
        <% end %>
    </p>
    <p>Difficulty:
    <% @review.difficulty.times do %>
      <i class="fa-solid fa-star"></i>
        <% end %>
    </p>
    <p><%= @review.content %></p>
    <%= link_to 'Back', hike_reviews_path, class: "btn btn-primary" %>
  </div>
</div>
